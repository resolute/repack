{
  "name": "@resolute/repack",
  "version": "0.1.3",
  "description": "Static site generator with asset optimization and versioning.",
  "bin": {
    "repack": "cli.js",
    "compress": "compress.js"
  },
  "main": "./",
  "types": "./",
  "files": [
    "*.js",
    "*.d.ts"
  ],
  "scripts": {
    "build": "npm run clean && tsc && chmod 755 cli.js compress.js && prettier --write *.js *.d.ts && (eslint --fix *.js > /dev/null 2>&1; true)",
    "release": "np",
    "prepublishOnly": "npm test && npm run build",
    "clean": "del-cli *.js *.js.map *.d.ts",
    "test": "echo TODO"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/resolute/repack.git"
  },
  "bugs": {
    "url": "https://github.com/resolute/repack/issues"
  },
  "homepage": "https://github.com/resolute/repack",
  "author": "Resolute Digital",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@babel/core": "*",
    "@babel/polyfill": "*",
    "@babel/preset-env": "*",
    "autoprefixer": "*",
    "core-js": "*",
    "fast-glob": "*",
    "got": "*",
    "htmlmin": "*",
    "imagemin": "*",
    "imagemin-jpegtran": "*",
    "imagemin-mozjpeg": "*",
    "imagemin-pngquant": "^8.0.0",
    "imagemin-webp": "*",
    "marko": "*",
    "node-zopfli": "*",
    "p-map": "*",
    "postcss": "*",
    "postcss-combine-media-query": "*",
    "postcss-sorting": "*",
    "probe-image-size": "*",
    "rollup": "*",
    "rollup-plugin-babel": "*",
    "rollup-plugin-commonjs": "*",
    "rollup-plugin-json": "*",
    "rollup-plugin-node-resolve": "*",
    "rollup-plugin-sourcemaps": "*",
    "rollup-plugin-typescript": "*",
    "sane": "*",
    "sass": "*",
    "sharp": "*",
    "svgo": "*",
    "terser": "^4.8.0",
    "ts-node": "*",
    "tslib": "*",
    "typescript": "*",
    "xxhash": "*"
  },
  "devDependencies": {
    "@types/autoprefixer": "*",
    "@types/imagemin": "*",
    "@types/imagemin-jpegtran": "*",
    "@types/imagemin-mozjpeg": "*",
    "@types/imagemin-pngquant": "*",
    "@types/imagemin-webp": "*",
    "@types/marko": "*",
    "@types/node": "*",
    "@types/rollup-plugin-json": "*",
    "@types/sane": "*",
    "@types/sass": "*",
    "@types/sharp": "*",
    "@types/svgo": "*",
    "@typescript-eslint/eslint-plugin": "*",
    "@typescript-eslint/parser": "*",
    "del-cli": "*",
    "eslint": "*",
    "eslint-config-airbnb-base": "*",
    "eslint-plugin-import": "*",
    "np": "*",
    "prettier": "*"
  },
  "keywords": [
    "static site generator",
    "build tool",
    "minify"
  ],
  "publishConfig": {
    "access": "public"
  },
  "license": "ISC"
}
